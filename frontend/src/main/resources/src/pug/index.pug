doctype html
html
    include include/util
    head
        meta(charset='UTF-8')
        link(rel='stylesheet', href='css/main.css')
        link(rel='stylesheet', href='lib/bootstrap/css/bootstrap.css')
    body
        .navbar.navbar-default
            .container-fluid
                .navbar-header
                    h3
                        +icon('glyphicon-th-large')
                        span Miscellaneous page

        #shortcut-panel.container

            .row
                h1 Available applications
            hr

            .row

                .col-sm-1

                +shortcut('uuid-shortcut', 'glyphicon-cog', 'UUID generator', [
                    'Different formats',
                    'Multiple value generation'
                ])

                .col-sm-1

                +shortcut('base64-shortcut', 'glyphicon-qrcode', 'Base64 converter', [
                    'Base64 decoding',
                    'Base64 encoding'
                ])

        include include/uuid
        include include/base64

        script(src='lib/jquery/jquery.js')
        script(src='lib/bootstrap/js/bootstrap.js')

        script(src='js/utils.js')
        script(src='js/application.js')
        script(src='js/base64-application.js')
        script(src='js/guid-application.js')
        script(src='js/index.js')

